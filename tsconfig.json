{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "scripthost"],
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "include": ["server/**/*", "shared/**/*", "index.d.ts", "src/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
